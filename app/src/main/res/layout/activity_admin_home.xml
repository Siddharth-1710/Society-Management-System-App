<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/ref_background"
    tools:context=".AdminHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome Admin"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="45dp"
                    android:id="@+id/btnAddSociety"
                    android:layout_marginTop="30dp"
                    android:text="Add Society"
                    android:theme="@style/MyButton"/>

                <Button
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:theme="@style/MyButton"
                    android:text="Add Events"
                    android:id="@+id/btnAddEvents"/>

                <Button
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:theme="@style/MyButton"
                    android:text="View Complaints"
                    android:id="@+id/btnViewComplaints"/>

                <Button
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:theme="@style/MyButton"
                    android:text="Logout"
                    android:id="@+id/btnAdminLogout"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
