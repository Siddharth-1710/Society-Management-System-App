<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ref_background"
    tools:context=".UserHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:layout_margin="15dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/textUserHomeHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="Welcome User"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:id="@+id/btnMaintainance"
                android:layout_marginTop="30dp"
                android:theme="@style/MyButton"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textUserHomeHeading"
                android:text="Maintainance"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:id="@+id/btnViewEvents"
                android:layout_marginTop="20dp"
                android:theme="@style/MyButton"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btnMaintainance"
                android:text="Society Events"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:id="@+id/btnAddComplaint"
                android:layout_marginTop="20dp"
                android:theme="@style/MyButton"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btnViewEvents"
                android:text="Add Complaint"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:id="@+id/btnAddBalance"
                android:layout_marginTop="20dp"
                android:theme="@style/MyButton"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btnAddComplaint"
                android:text="Add Balance"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:id="@+id/btnUserLogout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/btnAddBalance"
                android:theme="@style/MyButton"
                android:text="Logout"/>
        </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
