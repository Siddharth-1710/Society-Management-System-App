<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ref_background"
    tools:context=".AdminLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:focusable="true"
                android:layout_margin="20dp"
                android:focusableInTouchMode="true">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Login"
                    android:layout_marginTop="100dp"
                    android:textAllCaps="true"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/editAdminLoginId"
                    android:layout_width="300dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="45dp"
                    android:layout_marginTop="50dp"
                    android:ems="10"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:hint="Login ID"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/smallman"
                    android:drawablePadding="5dp"
                    android:layout_below="@+id/textView4" />

                <EditText
                    android:id="@+id/editAdminPassword"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:layout_centerHorizontal="true"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:layout_below="@+id/editAdminLoginId"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@android:drawable/ic_lock_idle_lock"
                    android:drawablePadding="5dp"
                    android:textColorHint="@android:color/white"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnAdminLogin"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:text="Login"
                    android:theme="@style/MyButton"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/editAdminPassword"
                    android:layout_marginTop="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textAdminForgotPassword"
                    android:layout_centerHorizontal="true"
                    android:text="Forgot Password?"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:layout_below="@+id/btnAdminLogin"
                    android:layout_marginTop="30dp"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
